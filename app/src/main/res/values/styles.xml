<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">@color/yellow</item>
    </style>

<!--    Button -->
    <style name="ButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

<!--    Button with icon-->
    <style name="ButtonWithIcon">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

<!--    Circular Image-->
    <style name="CircularImageView">
        <!-- Define a circular shape -->
        <item name="shapeAppearanceOverlay">@style/CircularShapeAppearance</item>
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="strokeWidth">4dp</item> <!-- Border width -->
    </style>

    <style name="CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item> <!-- Radius for a 120dp diameter circle -->
    </style>
</resources>
