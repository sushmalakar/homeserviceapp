<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/servicesRecyclerCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/providerRecyclerImage"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_addpic"
            android:tint="@color/yellow"
            />
        <!--            app:shapeAppearanceOverlay="@style/"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/providerRecyclerName"
            android:text="Name"
            android:textSize="16sp"
            android:layout_toEndOf="@id/providerRecyclerImage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/providerRecyclerCharge"
            android:text="Charge"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:textAlignment="center"
            android:layout_toEndOf="@id/providerRecyclerName"
            android:layout_marginTop="20dp"
            android:layout_marginStart="160dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>